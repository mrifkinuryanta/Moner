<resources>
    <!-- Base application theme. -->
    <style name="Theme.Moner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Moner</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_14sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="hintTextColor">@color/color_secondary_variant</item>
        <item name="boxStrokeColor">@color/color_primary_variant</item>
        <item name="startIconTint">@color/color_primary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:theme">@style/TextInputColorOutline</item>
    </style>

    <style name="TextInputColorOutline" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/color_primary_variant</item>
    </style>

    <style name="TextHintLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/bg_corner</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="TextTitleTabLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_primary_variant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageViewIcon" parent="Theme.Moner">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="TextToolbar" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleTableDetail" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextDescTableDetail" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>